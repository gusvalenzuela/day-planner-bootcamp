<div class="login-container col col-md-6 text-center">
    <h3>LOGIN!</h3>
    <form class="w-75" id="login" name="login" method="POST" action="/login">
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" placeholder="email address" name="email" type="email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" name="password" class="form-control" id="pwd">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <p class="mt-3">Don't have an account? <a href="/signup">Sign Up</a> today!</p>
</div>
<script>
    document.getElementById(`nav-login-link`).classList.add(`active`)
</script>