<form class="col-12 white-text" id="signup" name="signup" method="post" action="/signup">
    <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" placeholder="email address" name="email" type="email" class="form-control" id="email">
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" name="password" onchange='check_pwd()' class="form-control" id="pwd">
    </div>
    <div class="form-group">
        <label for="pwd">Confirm Password:</label>
        <input type="password" name="password2" onchange='check_pwd()' class="form-control" id="pwd2">
    </div>
    <button id="login-submit" type="submit" class="btn btn-default" disabled>Submit</button>
</form>
<script>
    function check_pwd() {
        if (document.getElementById('pwd').value ==
            document.getElementById('pwd2').value) {
            document.getElementById('login-submit').disabled = false;
        } else {
            document.getElementById('login-submit').disabled = true;
        }
    }
</script>