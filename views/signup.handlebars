<div class="signup-container col col-md-6">
    <h3>Start planning for free!</h3>
    <form id="signup" name="signup" method="POST" action="/signup">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" autocomplete="new-password" placeholder="example@email.com" name="email"
                class="form-control" id="email" required>
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" autocomplete="new-password" placeholder="*******" name="password"
                class="form-control" id="pwd" required>
        </div>
        <button id="login-submit" type="submit" class="btn btn-primary">Submit</button>
    </form>
    <p class="mt-3">Already have an account? <a href="/login">Login here</a>!</p>

</div>
<script>
    document.getElementById(`nav-signup-link`).classList.add(`active`)
</script>